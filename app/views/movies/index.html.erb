<h2>All Movies</h2>

<%#  Part 1: Start here... %>
<%# Check if the ratings[#{rating}] is correct. %>

<%= form_tag movies_path, method: :get, id: 'ratings_form' do %>
  Include:
  <%= hidden_field_tag :home , "1" %>
  <% @all_ratings.each do |rating| %>
    <div class="form-check  form-check-inline">
      <%= label_tag "ratings[#{rating}]", rating, class: 'form-check-label' %>
      <%= check_box_tag "ratings[#{rating}]", "1",  @ratings_to_show.include?(rating), class: 'form-check-input' %>
    </div>
  <% end %>
  <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary' %>
<% end %>


<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>
        <div class="<%= @click == 'Movie Title' ? 'hilite bg-warning' : 'hilite' %>">
          <%= link_to "Movie Title", movies_path({:home => "1", :click => 'Movie Title', :ratings => Hash[@ratings_to_show.collect { |item| [item, "1"] } ]}), id: 'title_header' %>
        </div>
      </th>
      <th>Rating</th>
      <th>
        <div class="<%= @click == 'Release Date' ? 'hilite bg-warning' : 'hilite' %>">
          <%= link_to "Release Date", movies_path({:home => "1", :click => 'Release Date', :ratings => Hash[@ratings_to_show.collect { |item| [item, "1"] } ]}), id: 'release_date_header' %>
        </div>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %> 
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
